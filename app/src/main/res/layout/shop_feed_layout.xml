<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_feed_item_layout"
    android:orientation="horizontal"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shop_feed_rounded_corner">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_margin="1dp"
            android:id="@+id/profile_pic_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:orientation="horizontal">

            <com.archaea.common.CircularNetworkImageView
                android:id="@+id/profile_picture"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="3dp"
                android:scaleType="fitCenter">
            </com.archaea.common.CircularNetworkImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_details_layout"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_name"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:paddingTop="2dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/timestamp"
                android:text="Maruti"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="1dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#a0a3a7"
                android:textSize="13dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:background="#c0c0c0"/>

            <TextView
                android:id="@+id/shop_description"
                android:textStyle="italic"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="4dp"
                android:textSize="15sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>